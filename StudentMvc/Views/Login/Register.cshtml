@model StudentMvc.Models.LoginRequest

<h2>Student Registration</h2>

<form method="post" asp-controller="Login" asp-action="Register">
    <label>Reg No:</label>
    <input asp-for="Reg_no" type="number" required /><br /><br>

    <label>Username:</label>
    <input asp-for="Username" required /><br /><br>

    <label>Password:</label>
    <input asp-for="Password" type="password" required /><br /><br>

    <button type="submit">Register</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
@if (ViewBag.Success != null)
{
    <p style="color:green">@ViewBag.Success</p>
}
